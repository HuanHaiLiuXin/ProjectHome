<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jet.projectone.CoolViewPagerActivity"
    android:orientation="vertical"
    >
    <android.support.v7.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="水平垂直循环及自定义边缘效果颜色"
        android:textAllCaps="false"
        android:onClick="goCVP1"
        />
    <android.support.v7.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="notifyDataSetChanged"
        android:textAllCaps="false"
        android:onClick="goCVP2"
        />
    <android.support.v7.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自动滚动,自定义滚动方向及间隔时间"
        android:textAllCaps="false"
        android:onClick="goCVP3"
        />
    <android.support.v7.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="水平垂直滚动状态下,自定义页面切换效果"
        android:textAllCaps="false"
        android:onClick="goCVP4"
        />
</LinearLayout>
