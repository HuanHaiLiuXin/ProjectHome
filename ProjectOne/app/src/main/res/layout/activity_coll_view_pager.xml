<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.jet.projectone.CollViewPagerActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CoolViewPager" />

    <com.huanhailiuxin.coolviewpager.CoolViewPager
        android:id="@+id/vp"
        android:layout_width="800px"
        android:layout_height="600px"
        app:cvp_scrollmode="horizontal"
        app:cvp_edgeeffectcolor="#81CC86"
        app:cvp_cycletransformer="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:onClick="setScrollHorizontal"
            android:text="水平滑动" />

        <android.support.v7.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:onClick="setScrollVertical"
            android:text="垂直滑动" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="原生ViewPager" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp1"
        android:layout_width="800px"
        android:layout_height="600px" />

</LinearLayout>
