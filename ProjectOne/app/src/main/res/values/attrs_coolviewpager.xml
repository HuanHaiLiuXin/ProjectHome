<?xml version="1.0" encoding="utf-8"?>
<!--
自定义属性,属性名称后缀拷贝自UltraViewPager(https://github.com/alibaba/UltraViewPager)
-->
<resources>
    <declare-styleable name="CoolViewPager">
        <attr name="cvp_autoscroll" format="integer" />
        <attr name="cvp_infiniteloop" format="boolean" />
        <attr name="cvp_ratio" format="float" />
        <attr name="cvp_scrollmode" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="cvp_disablescroll" format="enum">
            <enum name="none" value="0" />
            <enum name="backward" value="1" />
            <enum name="forward" value="2" />
        </attr>
        <attr name="cvp_drawedgeeffect" format="boolean"/>
        <attr name="cvp_edgeeffectcolor" format="color"/>
        <attr name="cvp_cycletransformer" format="boolean"/>
        <attr name="cvp_multiscreen" format="boolean" />
        <attr name="cvp_automeasure" format="boolean" />
        <attr name="cvp_itemratio" format="float" />
    </declare-styleable>
</resources>